<%- include('../partials/header.ejs') %>

<h1 style="text-align: center; margin-top: 5%;">Create a New Campground</h1>

<div style="width: 30%; margin: 25px auto;">
	<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
	  <div class="form-group">
	    <input type="text" class="form-control" name="campground[title]" value="<%= campground.title %>">
	  </div>
	  <div class="form-group">
	    <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
	  </div>
	  <div class="form-group">
	    <input type="text" class="form-control" name="campground[desc]" value="<%= campground.desc %>">
	  </div>
	  <button type="submit" class="btn btn-primary btn-lg" style="width: 100%">Submit</button>
	</form>
	<p></p>
	<a href="/campgrounds">Go Back</a>
</div>

<%- include('../partials/footer.ejs') %>