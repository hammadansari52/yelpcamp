<%- include('../partials/header.ejs') %>

<h1 style="text-align: center; margin-top: 5%;">Add a New Comment to <strong><%= campground.title %></strong></h1>

<div style="width: 30%; margin: 25px auto;">
	<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
	  <div class="form-group">
	    <input type="text" class="form-control" name="comment[text]" placeholder="Text">
	  </div>
	  <button type="submit" class="btn btn-primary btn-lg" style="width: 100%">Submit</button>
	</form>
	<p></p>
	<a href="/campgrounds/<%= campground._id %>">Go Back</a>
</div>

